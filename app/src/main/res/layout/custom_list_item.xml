<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/round_corners"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent">

    <TextView android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="#3377FF"
        android:textStyle="bold"
        android:text="name of item"/>

    <TextView android:id="@+id/item_cathegory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="cathegory"/>

    <TextView android:id="@+id/fk_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="13dp"
        android:textColor="#3377FF"
        android:textStyle="bold"
        android:text="seller"/>

    <ImageView android:id = "@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:src = "@drawable/wait"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:layout_weight="10">
        <TextView android:id="@+id/expiration_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="#FF77FF"
            android:text="2017-12-15 15:00:00"/>

        <TextView android:id="@+id/best_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="Best Offer"/>

        <TextView android:id="@+id/last_offerent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="from user: "/>

        <TextView android:id="@+id/state_of_auction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:text="Auction available"/>

        </LinearLayout>
</LinearLayout>
